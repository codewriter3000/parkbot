datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(cuid())
  username String @unique

  discord       DiscordUser? @relation(fields: [discordUserId], references: [id])
  discordUserId String       @unique

  communities DiscordServer[]
}

model DiscordUser {
  id          String @id
  displayName String

  user User?

  servers DiscordMember[]
}

model DiscordServer {
  id   String @id
  name String

  admins  User[]
  members DiscordMember[]
}

model DiscordMember {
  user     DiscordUser   @relation(fields: [userId], references: [id])
  userId   String
  server   DiscordServer @relation(fields: [serverId], references: [id])
  serverId String

  nickname String?
  banned   Boolean
  muted    Mute?   @relation(fields: [muteId], references: [id])
  muteId   String  @unique

  @@id([userId, serverId])
}

model Mute {
  id String @id @default(cuid())

  since    DateTime @default(now())
  duration Int

  member DiscordMember?
}
